page{
  background: rgb(239,241,244);
}
.main{
  margin: 35rpx 0;
  width: 750rpx;
  height: 310rpx;
}
.a{
  background: rgb(239,241,244);
}
.card-1{
  margin: 25rpx;
  width: 700rpx;
}
.card-1 image{
  width: 100%;
  border-radius: 10rpx;
}
.tags{
  display: flex;
  justify-content: space-between;
  padding-right: 27rpx;
}
.tit{
  padding-left: 42rpx;
  font-size: 35rpx;
  position: relative;
}
.tit::before{
  display: block;
  width: 7rpx;
  height: 40rpx;
  background:rgb(100,166,214);
  border:1rpx solid rgb(100,166,214);
  content: "";
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -20rpx;
  border-radius: 25rpx;
}
.blog{
  margin: 50rpx 25rpx;
  background: white;
  border-radius: 10rpx;
}
.card-2{
  width: 700rpx;
  height: 350rpx;
  padding:25rpx 40rpx 40rpx;
  box-sizing: border-box;
  border-bottom:1px solid rgb(248, 247, 247);
  align-items: center;
}
.card-2 .box .head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #838383;
  margin-right: 30rpx;
}
.card-2 .title{
  font-size: 32rpx;
  padding-bottom: 20rpx;
}
.card-2 .txt{
  font-size:30rpx;
  color: #888;
  padding-bottom: 10rpx;
}
.card-2 .box{
  font-size: 32rpx;
  display: flex;
  padding-right:30rpx;
  padding-bottom: 20rpx;
  color: rgb(100,166,214);
  font-weight: 700;
  align-items: center;
}
#date{
  padding-left: 30rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 400;
}
.card-2 .box-2{
  display: flex;
  align-items: center;
  justify-content: left;
  text-align: center;
  padding-top: 20rpx;
}
.card-2 .box-2 image{
  width: 25rpx;
  padding: 0 8rpx;
}
.card-2 .box-2 .comment{
  padding-left: 10rpx;
  font-size: 26rpx;
  color: #888;
}
.card-2 .box-2 .like{
  font-size: 26rpx;
  color: #888;
}
.round-click{
      height: 120rpx;
      width: 120rpx;
      border-radius: 100%;
      position: fixed;
      bottom: 150rpx;
      right: 20rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9;
  }
  .round-click image{
      max-width: 100rpx;
      color: #fff;
      text-align: center;
  }
  

